#!/bin/hush
mount -t proc none /proc
mount -t sysfs none /sys
mount -t ramfs ramfs /tmp
mount -t tmpfs tmpfs /dev
mkdir -p /dev/pts
mount -t devpts devpts /dev/pts
echo /sbin/mdev > /proc/sys/kernel/hotplug
mdev -s
mount -o ro /dev/fd0 /boot
clear
cat /etc/welcome
echo "Kernel version:"
uname -rv
cd /root
HOME="/root" /bin/hush